%table.table.table-striped
  %tbody
    - movies.each_with_index do |movie, i|
      - info = MovieInfo.new.call(movie.title)
      %tr
        %td= i + 1
        %td
          %img.img-rounded{ src: "https://pairguru-api.herokuapp.com/#{info["poster"]}", width: 100}
        %td
          %h4
            = link_to movie.title, movie_path(movie)
          %p
            %strong
              = link_to movie.genre.name, movies_genre_path(movie.genre)
            = ' (' + movie.released_at.to_s + ')'
          %p= movie.description
          %p= info["plot"]
          %p= info["rating"]
